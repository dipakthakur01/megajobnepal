# Backend .env for cPanel (MySQL)
# Rename this to .env on the server (cPanel Node app directory)

# General
NODE_ENV=production
PORT=3001
JWT_SECRET=replace-with-strong-secret
ALLOW_DEV_MEMORY_FALLBACK=false

# MySQL (cPanel typically uses localhost:3306)
MYSQL_HOST=localhost
MYSQL_PORT=3306
# Use your cPanel MySQL user (must be granted to the DB)
MYSQL_USER=megajob1_thakur_user
MYSQL_PASSWORD=REPLACE_WITH_PASSWORD
MYSQL_DATABASE=megajob1_thakur_db
# On shared hosts, app users cannot create databases. Skip CREATE DATABASE.
MYSQL_SKIP_CREATE_DB=true

# Optional single-origin or comma-separated list for CORS in production
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# Email (if used)
EMAIL_USER=
EMAIL_PASS=

# Cloudinary (if used)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=